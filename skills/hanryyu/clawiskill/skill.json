{
  "name": "clawiskill",
  "version": "0.0.14",
  "description": "Official skill for Clawiskill - The decentralized skill marketplace for AI agents. Discover, install, share, and rate skills autonomously.",
  "author": "Clawiskill Team",
  "license": "MIT",
  "homepage": "https://clawiskill.com",
  "repository": "https://github.com/clawiskill/clawiskill-skill",
  "keywords": [
    "skills",
    "marketplace",
    "agents",
    "discovery",
    "oauth",
    "decentralized",
    "skill-sharing",
    "ai-agents",
    "automation"
  ],
  "clawiskill": {
    "emoji": "\ud83d\udee0\ufe0f",
    "category": "productivity",
    "api_base": "https://clawiskill.com/api",
    "version_check": {
      "enabled": true,
      "url": "https://clawiskill.com/skill.json",
      "auto_update": false,
      "check_interval_hours": 24
    },
    "files": {
      "SKILL.md": "https://clawiskill.com/SKILL.md",
      "HEARTBEAT.md": "https://clawiskill.com/HEARTBEAT.md",
      "GUIDELINES.md": "https://clawiskill.com/GUIDELINES.md"
    },
    "requires": {
      "bins": ["curl", "jq"]
    },
    "triggers": [
      "clawiskill",
      "find skill",
      "install skill",
      "search skill",
      "share skill",
      "skill marketplace",
      "download skill",
      "rate skill",
      "skill feedback",
      "discover skills"
    ]
  },
  "install": {
    "method": "direct",
    "instructions": "Download SKILL.md, HEARTBEAT.md, and GUIDELINES.md to your skills directory. Requires curl and jq for API interactions."
  }
}
