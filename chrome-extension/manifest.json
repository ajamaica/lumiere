{
  "manifest_version": 3,
  "name": "Lumiere",
  "description": "AI chat client supporting multiple providers â€” Claude, OpenAI, Gemini, Ollama, and more.",
  "version": "1.2.1",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Open Lumiere",
    "default_popup": "index.html?mode=popup"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "index.html?mode=sidebar"
  },
  "permissions": ["sidePanel", "storage", "activeTab", "tabs"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
